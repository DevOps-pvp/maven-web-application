properties([[$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([githubPush()])])
pipeline{
    agent any
    
    tools{
        maven "Maven V3.8.6"
    }//tools
    //test0102
    stages{
        stage('pipeline-started'){
        steps{
            notifyBuild('STARTED')
        }
         } //slack-started
        
        stage('CheckoutCode'){
           steps{
               git branch: 'development', credentialsId: '1f554e08-c1a6-4154-a352-be4158aa1bcf', url: 'https://github.com/DevOps-pvp/maven-web-application.git'
           } //step
        }//stage_CheckoutCode
    
        stage('MavenBuild'){
           steps{
               sh "mvn clean package"
           }//step 
        }//stage_MavenBuild
        
        stage('ExecuteSonarQubeReport'){
            steps{
                sh "mvn sonar:sonar"
            }//step
        }//stage_ExecuteSonarQubeReport
        
        stage('UploadArtifactinotNexus'){
            steps{
                sh "mvn deploy"
            }
        }//stage_UploadArtifactinotNexus
        
        stage('DeployIntoTomcat'){
            steps{
                sshagent(['tomcatSsh']) {
                       sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.36.91:/opt/tomcat/webapps/"
                }
            }//step
        }//stage_DeployIntoTomcat
        
    }//stages
  
    post {
    success {
        notifyBuild(currentBuild.result)
    }
    failure {
        notifyBuild(currentBuild.result)
    }
    }

}//pipeline

def notifyBuild(String buildStatus) {
  // build status of null means successful
  //buildStatus =  buildStatus ?: 'SUCCESSFUL'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}
